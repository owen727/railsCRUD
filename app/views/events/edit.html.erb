
<%= form_for @event, :url => event_path(@event), :method => :patch do |f| %>

<p>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
</p> 
<p>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
</p> 
<p>   
    <%= f.label :isbn, "ISBN" %>
    <%= f.text_field :isbn %>
</p> 
    <%= f.submit "Update" %>


<% end %>